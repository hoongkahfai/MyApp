<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add new product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />
    
    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        >

        <ImageView
            android:id="@+id/nike"
            android:layout_width="138dp"
            android:layout_height="80dp"
            android:src="@drawable/nike" />

        <ImageView
            android:id="@+id/adidas"
            android:layout_width="133dp"
            android:layout_height="80dp"
            android:src="@drawable/adidas" />
        <ImageView
            android:id="@+id/puma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/puma"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        >

        <ImageView
            android:id="@+id/vans"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:src="@drawable/vans" />

        <ImageView
            android:id="@+id/gucci"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:src="@drawable/gucci" />
    <ImageView
        android:id="@+id/chanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chanel"/>
    </LinearLayout>


</RelativeLayout>